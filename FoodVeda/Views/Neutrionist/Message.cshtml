                                        <th>Email</th>
                                        <th>Message</th>
                                        <th>Status</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        var cnt = 0;
            }
                                    @foreach (var result in Model.ToList())
                                    {
                                        
                                    <tr>
                                        <td>@cnt++</td>
                                        <td class="center">@result.Name</td>
                                        <td class="center">@result.Email</td>
                                        <td class="center">@result.Message</td>
                                        <td class="center">@result.Status</td>
                                        <td class="center"><button class="btn btn-success" onclick="replyMessage(@result.Id, '@result.Email')">Reply</button></td>
                                    </tr>

                                    }
                                </tbody>

                            </table>
                        </div>
                    </div><!--/span-->

                </div><!--/row-->
            <script>
                var Id = 0;
                var Email = "";
                function replyMessage(id, email) {
                    Id = id;
                    Email = email;
                    $("#popup").show();
                }
                function ClickMeAjax() {
                    var message = $("#replymessage").val();
                    $.get({
                        url: "Neutrionist/Message",
                        data: { Email: Email, Message: message },
                        success: function (reply) {
                            alert("Sent successfully");
                        }
                    });
                }
