@model IEnumerable<FoodVeda.Models.Product>
@{
    ViewData["Title"] = "ViewProduct";
}

<div class="box-content">
    <div class="popup" id="popup">

        <div class="mb-3">
            <label for="replymessage" class="form-label">Reply</label>
            <textarea class="form-control" id="replymessage" rows="10" cols="10" placeholder="Enter message here..."></textarea>
        </div>
        <button class="btn btn-success" id="submit-btn" type="submit" onclick="ClickMeAjax()">Submit</button>

    </div>
    <table class="table table-striped table-bordered bootstrap-datatable datatable">
        <thead>
            <tr>
                <th>SN</th>
                <th>Title</th>
                <th>Display Rate Per Quantity</th>
                <th>Rate For FoodVeda   </th>
                <th>Quantity</th>
                <th>Description</th>
                
            </tr>
        </thead>
        <tbody>
            @{
                var cnt = 0;
            }
            @foreach (var result in Model.ToList())
            {

                <tr>
                    <td>@cnt++</td>
                    <td class="center">@result.Title</td>
                    <td class="center">@result.DisplayRatePerQuantity</td>
                    <td class="center">@result.RateForFoodVeda</td>
                    <td class="center">@result.Quantity</td>
                    <td class="center">@result.Description</td>
                </tr>

            }
        </tbody>

    </table>
</div>

